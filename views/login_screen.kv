<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Login'
            font_size: 32

        TextInput:
            id: username
            hint_text: 'Username'

        TextInput:
            id: password
            hint_text: 'Password'
            password: True

        Button:
            text: 'Login'
            on_release: root.manager.current = 'profile' if root.login(username.text, password.text) else 'login'
